      <group targetFramework="wp71">
      </group>

      <group targetFramework="wp8">
        <dependency id="HockeySDK.Core" version="[2.1.0-beta3]" />
      </group>
    </dependencies>
  </metadata>

  <files>
    <file src="..\bin\wp8\Release\HockeyApp.*" target="lib\wp8" />
    <file src="..\bin\wp75\Release\HockeyApp.*" target="lib\wp71" />

    <file src="content\**" target="content" />
    <file src="tools\**" target="tools" />
